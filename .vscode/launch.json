{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "STREAMLIT_APP": "app.py",
                "STREAMLIT_ENV": "development",
                "AWS_PROFILE": "mega_root",
                "PYTHONPATH": "${workspaceRoot}/.venv",
            },
            "args": [
                "run",
                "app.py"
            ],
            "jinja": true
        }
    ]
}